<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tinymos.demo.star_tracker">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-feature android:name="android.hardware.location.gps" />
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen">
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="userLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SelectDevice"
            android:screenOrientation="userLandscape" />
        <activity
            android:name=".camera.C2Camera"
            android:screenOrientation="landscape" />
        <activity
            android:name=".phone.P4SearchStar"
            android:screenOrientation="userLandscape" />
        <activity
            android:name=".phone.P5TrackingProgress"
            android:screenOrientation="userLandscape" />
        <activity
            android:name=".phone.P6SetExposure"
            android:screenOrientation="userLandscape" />
        <activity
            android:name=".phone.P7TakingPhoto"
            android:screenOrientation="userLandscape"/>
        <activity
            android:name=".phone.launch.P2PiPhoneConnection"
            android:screenOrientation="userLandscape" />
        <activity
            android:name=".phone.P3Calibrating"
            android:screenOrientation="userLandscape"/>
        <activity
            android:name=".camera.launch.C1CameraPhoneConnection"
            android:screenOrientation="userLandscape"/>
        <activity
            android:name=".phone.launch.P1CameraPhoneConnection"
            android:screenOrientation="userLandscape"/>
    </application>

</manifest>